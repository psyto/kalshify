# Fabrknt Suite - Environment Variables
# Copy this file to .env.local and fill in your API keys

# GitHub API
# Get your token at: https://github.com/settings/tokens
# Scopes needed: public_repo
GITHUB_TOKEN=your_github_token_here

# Twitter API (X API v2)
# Get your Bearer Token at: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Alchemy API
# Get your API key at: https://www.alchemy.com/
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Helius API (for Solana - optional)
# Get your API key at: https://www.helius.dev/
HELIUS_API_KEY=your_helius_api_key_here

# Dune Analytics API
# Get your API key at: https://dune.com/settings/api
DUNE_API_KEY=your_dune_api_key_here

# Nansen API (optional - for wallet quality metrics)
# Get your API key at: https://www.nansen.ai/
NANSEN_API_KEY=your_nansen_api_key_here

# Database (PostgreSQL)
# For production data storage
DATABASE_URL=postgresql://user:password@localhost:5432/fabrknt_suite

# NextAuth v5 (for user authentication)
# Generate secret: openssl rand -base64 32
# For production, set AUTH_URL to your Vercel domain
AUTH_URL=http://localhost:3000
AUTH_SECRET=your_auth_secret_here

# GitHub OAuth (for sign in with GitHub)
# Get from: https://github.com/settings/developers
GITHUB_ID=your_github_oauth_client_id
GITHUB_SECRET=your_github_oauth_client_secret

# Google OAuth (for sign in with Google)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Anthropic API (for AI-powered yield recommendations)
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Gemini API (for AI features - optional, legacy)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Resend (for email notifications)
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=partnerships@fabrknt.com

# Site URL (for email links)
NEXT_PUBLIC_SITE_URL=https://fabrknt.com

# AWS (for Lambda deployment - optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
